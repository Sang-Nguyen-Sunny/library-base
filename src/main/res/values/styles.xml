<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DialogFragmentTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="ButtonRadiusStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextLayoutRegularStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLayoutMediumStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomPopupDialogTheme" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>


</resources>